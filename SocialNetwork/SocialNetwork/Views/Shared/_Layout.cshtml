<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SocialNetwork</title>
    <link rel="icon" type="image" href ="~/images/faviconc.png"/>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SocialNetwork.styles.css" asp-append-version="true" />
    <!-- <link rel="stylesheet" href="~/css/output.css"> tailwind -->
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-mysm navbar-light bg-white border-bottom mb-3">
   <!-- <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3"> -->
            <div class="container-fluid">
                <a class="navbar-brand logo" asp-area="" asp-controller="Home" asp-action="Index">
                    <span class="d-none d-md-inline">SocialNetwork</span>
                    <span class="d-md-none">SN</span>
                </a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                    </ul>

                    <!-- search -->
                    <form class="d-flex w-50 mx-4" action="#" method="get">
                        <input class="form-control" type="search" placeholder="Search Profiles, Posts...">
                    </form>
                </div>

                <div class="d-flex align-items-center order-md-1 ms-auto"> <!-- class="hidden" for future code -->
                    <!-- notification icon -->
                    <button class="btn btn-light position-relative me-3" data-bs-toggle="modal" data-bs-target="#notificationModal">
                        <ion-icon name="notifications-outline" class="text-xl"></ion-icon>
                        <!-- alternative icon varians -->
                        @*
                            <icon class="notification-icon">
                                <svg fill="#000000" width="40px" height="40px" viewBox="0 0 36 36" version="1.1" preserveAspectRatio="xMidYMid meet" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
                                    <title>notification-line</title>
                                    <path class="clr-i-outline clr-i-outline-path-1" d="M32.51,27.83A14.4,14.4,0,0,1,30,24.9a12.63,12.63,0,0,1-1.35-4.81V15.15A10.81,10.81,0,0,0,19.21,4.4V3.11a1.33,1.33,0,1,0-2.67,0V4.42A10.81,10.81,0,0,0,7.21,15.15v4.94A12.63,12.63,0,0,1,5.86,24.9a14.4,14.4,0,0,1-2.47,2.93,1,1,0,0,0-.34.75v1.36a1,1,0,0,0,1,1h27.8a1,1,0,0,0,1-1V28.58A1,1,0,0,0,32.51,27.83ZM5.13,28.94a16.17,16.17,0,0,0,2.44-3,14.24,14.24,0,0,0,1.65-5.85V15.15a8.74,8.74,0,1,1,17.47,0v4.94a14.24,14.24,0,0,0,1.65,5.85,16.17,16.17,0,0,0,2.44,3Z"></path>
                                    <path class="clr-i-outline clr-i-outline-path-2" d="M18,34.28A2.67,2.67,0,0,0,20.58,32H15.32A2.67,2.67,0,0,0,18,34.28Z"></path>
                                    <rect x="0" y="0" width="36" height="36" fill-opacity="0" />
                                </svg>
                            </icon>
                            <img src="~/images/bell.png" class="notification-icon" width="40" length="40"/> *@
                        <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">0</span> <!-- notifications num -->
                    </button>

                    <!-- profile icon -->
                    <div class="dropdown">
                        <button class="btn btn-light p-0" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="~/images/user.png" class="userpic" width="40" height="40" /> <!-- class="rounded-circle" -->
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end">
                            <li class="dropdown-item d-flex align-items-center">
                                <img src="~/images/user.png" class="rounded-circle me-2" width="40" height="40" />
                                <div>
                                    <div class="fw-bold">Name</div>
                                    <div class="text-muted">@@nick</div>
                                </div>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" href="#">My Account</a></li>
                            <li><a class="dropdown-item" href="#">Log Out</a></li>
                        </ul>
                    </div>
                </div>
                <!-- burger-menu -->
                <button class="navbar-toggler ms-auto" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-expanded="false">
                    <span class="navbar-toggler-icon"></span>
                </button>
            </div>
        </nav>
    </header>

    <!-- notifications modal -->
    @await Html.PartialAsync("Modals/_NotificationModal")



    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

	<footer class="footer text-light bg-dark">
<!-- <footer class="border-top footer text-muted"> -->
        <div class="container">
            &copy; 2025 - SocialNetwork
       <!-- &copy; 2025 - SocialNetwork - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a> -->
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script type="module" src="https://cdn.jsdelivr.net/npm/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script> <!-- ionicons library -->
</body>
</html>
