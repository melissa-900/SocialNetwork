<div class="card mb-3">
	<div class="card-body">
		<h5 class="card-title">Create Post</h5>
		<textarea class="form-control mb-2" rows="2" placeholder="..."></textarea>
		<div id="imagePreviewContainer" class="d-none mt-3" style="display: none; text-align: center;">
			<img id="imagePreview" src="#" class="img-fluid rounded border" alt="Image preview" style="max-height: 300px; object-fit: cover; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);" />
		</div>
		<div class="d-flex mb-2">
			<div>
				<input type="file" id="uploadImage" class="d-none" accept="image/*">
				<label for="uploadImage" class="btn btn-secondary">
					<ion-icon name="image-outline" class="text-xl"></ion-icon>
					<span class="d-none d-sm-inline">Image</span>
				</label>
			</div>
			<button class="btn btn-primary ms-3 ms-md-4 ms-lg-5">Post</button>
		</div>
	</div>
</div>